<!DOCTYPE html>
<html>

<% include partials/head.ejs %>

<body class="sub_page">
    
    <div class="hero_area">
        <!-- header section strats -->
        <% include partials/header.ejs %>
        <!-- end header section -->
    </div>  
    <section class="layout_padding">        
        <div class="custom_nav-container">
            <div class="heading_container heading_center">
                <h2>
                    Sign up
                </h2>
                </div>
            <div class="row">
                <div class="col-md-8 col-lg-6 mx-auto">
                    <div class="form_container">
                        <form action="/register" method="post">
                            <input id="name" name="name" type="text" placeholder="Name" required />
                            <input id="email" name="email" type="email" placeholder="Email" required />
                            <input id="password" name="password" type="password" placeholder="Password" onchange="validate()" required />
                            <input id="password_check" type="password" placeholder="Confirm password" onchanger="validate()" required/>
                            <p id="alert_message"></p>
                            <input class="login_button" type="submit" value="Login" style="display: none;" />
                            <div class="btn_box" >
                                <button onclick="document.getElementById('login_button').click();">SIGN UP</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>  
  <!-- info section -->
  <% include partials/info.ejs %>
  <!-- end info section -->


  <!-- footer section -->
  <% include partials/footer.ejs %>
  <!-- footer section -->

  <!-- jQery -->
  <script src="js/jquery-3.4.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="js/bootstrap.js"></script>
  <!-- custom js -->
  <script src="js/custom.js"></script>


</body>

</html>